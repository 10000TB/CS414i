        nameOfTiles.add("null");

        //nameOfTiles.add("Free Parking (Just take a rest)");
        System.out.println(nameOfTiles.size());
        
        int flag = 0;
        for (int j = 0; j < 4; j++) {
            for (int i = 0; i < 11; i++) {
                JPanel tempPanel = new JPanel();
             	JLabel label = new JLabel();

                switch(j)
                {
                case 0://Top Spaces
                    gridX = i;
                    gridY = 0;
                    label.setText(nameOfTiles.get(flag));
                    //System.out.println(nameOfTiles.get(flag) + (j*10+i));
                    flag++;
                    
                    tempPanel.add(label);
                    break;
                case 1://Left Spaces
                    gridX = 0;
                    gridY = i;
                    
                    label.setText(nameOfTiles.get(flag));
                    tempPanel.add(label);
                    flag++;

                    
                    break;
                case 2://Right Spaces
                    gridX = 10;
                    gridY = i;
                    label.setText(nameOfTiles.get(flag));
                    tempPanel.add(label);
                    flag++;
                    break;
