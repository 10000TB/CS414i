        nameOfTiles.add("<html><h4>States <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>Electricity <br>Company</h4></html>");
        nameOfTiles.add("<html><h4>St. Charles <br>Place</h4></html>");
        nameOfTiles.add("<html><h4>IN JAIL</h4></html>");

        nameOfTiles.add("null");
        nameOfTiles.add("<html><h4>Pacific <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>North Carolina <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>Community <br>Chest</h4></html>");
        nameOfTiles.add("<html><h4>Pennsylvania <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>Short Line <br>Station</h4></html>");
        nameOfTiles.add("<html><h4>Chance</h4></html>");
