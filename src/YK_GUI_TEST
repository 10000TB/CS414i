        nameOfTiles.add("null");
        nameOfTiles.add("<html><h4>Connecticut <br>Avenue</h4></html>"); 
        nameOfTiles.add("<html><h4>Vermont <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>Chance</h4></html>");
        nameOfTiles.add("<html><h4>Oriental <br>Avenue</h4></html>");
        nameOfTiles.add("<html><h4>Reading <br>RailRoad</h4></html>");
